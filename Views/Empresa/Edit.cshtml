@model IEnumerable<TesteBludata.Models.Entity.Empresa>
@{
    ViewData["Title"] = "Edição de empresa";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<h2>Edição Empresa</h2><br>
<div class="col-lg-6">
<div id="resposta" style="display:none;"></div>
<form class="form-horizontal id="FormEmpresaEditar">
    <div class="box-body">
        <div class="form-group">
            <label class="col-sm-2 control-label">Nome</label>
            <div class="mb-3">
                <input type="text" class="form-control" id="Nome" name="Nome"
                       autocomplete="off" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">UF</label>
            <div class="mb-3">
                <select id="UF" name="UF" class="form-control">
                    <option value="">-- Selecione o estado --</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">CPF/CNPJ</label>
            <div class="mb-3">
                <input type="text" class="form-control" id="CPF_ou_CNPJ" name="CPF_ou_CNPJ"
                       autocomplete="off" />
            </div>
        </div>
            <div class="modal-footer">
                <a class="btn btn-warning" href="/Empresa/Index"> Cancelar </a>        
            <button type="button" id="Salva" class="btn btn-primary">Salvar</button>
        </div>          
    </div>
</form>
</div>

<script src="~/js/TelaEmpresa.js"></script>
